<UserControl x:Class="UnionGas.MASA.Dialogs.LoginDialog.LoginDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UnionGas.MASA.Dialogs.LoginDialog"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=EmployeeId}">
        <TextBlock Text="Employee Number" FontSize="24" Margin="5" />
        <TextBox x:Name="EmployeeId" HorizontalAlignment="Center" FontSize="22" Margin="5" Width="300" />

        <Button x:Name="Close" HorizontalAlignment="Right" Margin="5" IsDefault="True">OK</Button>
    </StackPanel>
</UserControl>