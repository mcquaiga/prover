<UserControl x:Class="Client.Wpf.Controls.ValueDescriptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:Client.Wpf.Controls"
             x:Name="ValueDescription">
    <UserControl.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryText"
                             Opacity=".90" 
                             Color="Black"/>
            <SolidColorBrush x:Key="SecondaryText"
                             Opacity=".75" 
                             Color="Black"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Margin="5 2 0 2" 
            BorderThickness="3 0 0 0"
            DataContext="{Binding ElementName=ValueDescription}">
        <Border.Style>
            <Style TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueDarkBrush}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=IsReadOnly}" Value="False">
                        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryAccentBrush}"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=IsReadOnly}" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueDarkBrush}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid Margin="5 0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox Text="{Binding Path=Value, FallbackValue='32.00'}"  
                     controls:InputBindingsManager.UpdatePropertySourceWhenEnterPressed="TextBox.Text"
                     Grid.Row="0"
                     FontSize="{Binding ValueFontSize, FallbackValue=24}"
                     BorderThickness="0"
                     IsReadOnly="{Binding Path=IsReadOnly}"
                     materialDesign:TextFieldAssist.DecorationVisibility="{Binding Path=IsReadOnly, Converter={StaticResource BoolToHiddenConverter}}"
                     Foreground="{StaticResource PrimaryText}" />

            <TextBlock Text="{Binding Path=Label, FallbackValue='Gauge'}"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       FontSize="{Binding LabelFontSize, FallbackValue=16}"
                       Foreground="{StaticResource SecondaryText}" />
        </Grid>
    </Border>

</UserControl>