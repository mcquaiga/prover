<UserControl x:Class="UnionGas.MASA.Screens.Toolbars.LoginToolbar.LoggedIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UnionGas.MASA.Screens.Toolbars.LoginToolbar"
             TextElement.FontSize="16"
             TextElement.FontWeight="Light"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="150">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Welcome, " />
            <TextBlock x:Name="Username" />
        </StackPanel>
        <Button x:Name="LogoutButton" Style="{StaticResource MaterialDesignRaisedLightButton}">Logout</Button>
    </StackPanel>
</UserControl>